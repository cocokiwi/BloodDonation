<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/AboutPlasmaFragment"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:padding="2dp"
    tools:context=".Dashboard.Setting.AboutAppFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:padding="2dp"
      android:layout_height="wrap_content">


      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          app:cardCornerRadius="12dp"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:padding="2dp"
          app:cardElevation="8dp"
          android:layout_marginBottom="15dp"
          app:cardBackgroundColor="@color/btn_background_tint"
          android:layout_height="wrap_content">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="12dp">

              <TextView
                  android:id="@+id/question1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  android:fontFamily="@font/poppins_regular"
                  android:letterSpacing="0.03"
                  android:text="What is Rapid Red?"
                  android:textSize="18sp"/>

              <TextView
                  android:id="@+id/answer1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black2"
                  android:layout_marginTop="6dp"
                  android:letterSpacing="0.03"
                  android:justificationMode="inter_word"
                  android:textSize="14sp"
                  android:fontFamily="@font/poppins_light"
                  android:layout_below="@+id/question1"
                  android:text="through this application, any
person interested in donating blood can and those who need of blood can register himself. If
any general user wants to make a request to have blood online, he can also take the help of this
system by searching through the database, the changes are reflected in all the interfaces used
and updates are in real time. So, the system provides a simple and quick interaction among
various groups, patients and the blood banks. It is designed to overcome the drawbacks of the
existing system."
                  tools:targetApi="o" />


          </RelativeLayout>


      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          app:cardCornerRadius="12dp"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:padding="2dp"
          app:cardElevation="8dp"
          android:layout_marginBottom="15dp"
          app:cardBackgroundColor="@color/btn_background_tint"
          android:layout_height="wrap_content">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <TextView
                  android:id="@+id/question2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="8dp"
                  android:layout_marginRight="8dp"
                  android:textColor="@color/black"
                  android:fontFamily="@font/poppins_regular"
                  android:text="How you can use it?"
                  android:textSize="18sp"/>

              <TextView
                  android:id="@+id/answer2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black2"
                  android:textSize="14sp"
                  android:fontFamily="@font/poppins_light"
                  android:layout_below="@+id/question2"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginBottom="15dp"
                  android:layout_marginTop="2dp"
                  android:text="You need to follow some basic steps to use this application.\nThose are- \n1. First you need create your profile.\n2. If you're a user and need donor then you can check the details of the donor from the dashboard of the app.\n3. Now, if you're a Donor, then you can apply for donation and you're donation request will show in the dashboard of the app. "
                  />

          </RelativeLayout>


      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          app:cardCornerRadius="12dp"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:padding="2dp"
          app:cardElevation="8dp"
          android:layout_marginBottom="15dp"
          app:cardBackgroundColor="@color/btn_background_tint"
          android:layout_height="wrap_content">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <TextView
                  android:id="@+id/question3"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="8dp"
                  android:layout_marginRight="8dp"
                  android:textColor="@color/black"
                  android:fontFamily="@font/poppins_regular"
                  android:text="Features of the app"
                  android:textSize="18sp"/>

              <TextView
                  android:id="@+id/answer3"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/blue"
                  android:textSize="14sp"
                  android:layout_below="@+id/question3"
                  android:fontFamily="@font/poppins_light"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginBottom="15dp"
                  android:layout_marginTop="2dp"
                  android:text="Track user current location\nIn-built chat section\nDynamic Database\n24/7 availability\nEase to use\nTime Essence\nComparative study"
                  />

          </RelativeLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          app:cardCornerRadius="12dp"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:padding="2dp"
          app:cardElevation="8dp"
          android:layout_marginBottom="15dp"
          app:cardBackgroundColor="@color/btn_background_tint"
          android:layout_height="wrap_content">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <TextView
                  android:id="@+id/question6"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="8dp"
                  android:layout_marginRight="8dp"
                  android:textColor="@color/black"
                  android:fontFamily="@font/poppins_regular"
                  android:text="Blood Group Compatabale"
                  android:textSize="18dp"/>

              <TextView
                  android:id="@+id/answer61"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/red_light"
                  android:textSize="18dp"
                  android:fontFamily="@font/poppins_semibold"
                  android:layout_below="@+id/question6"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginBottom="1dp"
                  android:layout_marginTop="2dp"
                  android:text="A   :  A,AB"
                  />

              <TextView
                  android:id="@+id/answer62"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/red_light"
                  android:textSize="18dp"
                  android:fontFamily="@font/poppins_semibold"
                  android:layout_below="@+id/answer61"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginBottom="1dp"
                  android:layout_marginTop="2dp"
                  android:text="B   :  B,AB"
                  />

              <TextView
                  android:id="@+id/answer63"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/red_light"
                  android:textSize="18dp"
                  android:fontFamily="@font/poppins_semibold"
                  android:layout_below="@+id/answer62"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginBottom="1dp"
                  android:layout_marginTop="2dp"
                  android:text="O   :  A,B,O,AB"
                  />

              <TextView
                  android:id="@+id/answer64"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/red_light"
                  android:textSize="18dp"
                  android:fontFamily="@font/poppins_semibold"
                  android:layout_below="@+id/answer63"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginBottom="15dp"
                  android:layout_marginTop="2dp"
                  android:text="AB  :  AB"
                  />



          </RelativeLayout>

      </androidx.cardview.widget.CardView>


      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="40dp"
          android:padding="2dp"
          app:cardElevation="8dp"
          app:cardBackgroundColor="@color/btn_background_tint">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <TextView
                  android:id="@+id/more_site"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="List of websites for information on blood donation:"
                  android:textColor="@color/black"
                  android:layout_marginLeft="8dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginBottom="5dp"
                  android:fontFamily="@font/poppins_regular"/>

              <TextView
                  android:id="@+id/site1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/blue"
                  android:fontFamily="@font/comfortaa"
                  android:layout_marginLeft="5dp"
                  android:layout_below="@+id/more_site"
                  android:layout_marginTop="2dp"
                  android:text="https://en.wikipedia.org/wiki/Blood_donation"/>


              <TextView
                  android:id="@+id/site2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/blue"
                  android:layout_marginLeft="5dp"
                  android:fontFamily="@font/comfortaa"
                  android:layout_below="@+id/site1"
                  android:layout_marginTop="2dp"
                  android:text="https://www.mayoclinic.org"/>


              <TextView
                  android:id="@+id/site3"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/blue"
                  android:layout_marginLeft="5dp"
                  android:fontFamily="@font/comfortaa"
                  android:layout_marginBottom="8dp"
                  android:layout_below="@+id/site2"
                  android:layout_marginTop="2dp"
                  android:text="https://www.redcrossblood.org"/>

          </RelativeLayout>

      </androidx.cardview.widget.CardView>

  </LinearLayout>

</ScrollView>