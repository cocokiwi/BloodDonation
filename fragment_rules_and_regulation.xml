<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RulesFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Dashboard.Home.RulesAndRegulationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/top_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/judson_bold"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.04"
                    android:text="Please Fill It Correctly"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:padding="6dp"/>

                <FrameLayout
                    android:id="@+id/male_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/top_header"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/first"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="8dp"
                            app:cardBackgroundColor="@color/global_background"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/disease_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="12dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.02"
                                    android:text="Do you have any Chronic Kidney/ heart / lung / liver disease ?"
                                    android:textColor="@color/black2"
                                    android:textSize="16sp" />

                                <soup.neumorphism.NeumorphCardView
                                    android:id="@+id/disease_text_Yes"
                                    android:layout_width="150dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginBottom="8dp"
                                    app:neumorph_shapeType="flat">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:text="YES"
                                            android:textColor="@color/green" />

                                    </RelativeLayout>

                                </soup.neumorphism.NeumorphCardView>

                                <soup.neumorphism.NeumorphCardView
                                    android:id="@+id/disease_text_No"
                                    android:layout_width="150dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginEnd="8dp"
                                    app:neumorph_shapeType="flat">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:text="NO"
                                            android:textColor="@color/red" />

                                    </RelativeLayout>

                                </soup.neumorphism.NeumorphCardView>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/second"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_below="@+id/first"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="8dp"
                            app:cardBackgroundColor="@color/global_background"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/cancer_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="12dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.02"
                                    android:text="Are you a Cancer Survivor ?"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <soup.neumorphism.NeumorphCardView
                                    android:id="@+id/cancer_text_Yes"
                                    android:layout_width="150dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginBottom="8dp"
                                    app:neumorph_shapeType="flat">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:text="YES"
                                            android:textColor="@color/green" />

                                    </RelativeLayout>

                                </soup.neumorphism.NeumorphCardView>

                                <soup.neumorphism.NeumorphCardView
                                    android:id="@+id/cancer_text_No"
                                    android:layout_width="150dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginBottom="8dp"
                                    app:neumorph_shapeType="flat">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:text="NO"
                                            android:textColor="@color/red" />

                                    </RelativeLayout>

                                </soup.neumorphism.NeumorphCardView>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/three"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/second"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="8dp"
                            app:cardBackgroundColor="@color/global_background"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/weight_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.02"
                                    android:text="Your Weight:"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/weight_text_male"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/weight_text"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.03"
                                    android:background="@drawable/fill_background"
                                    android:hint="Weight"
                                    android:inputType="number"
                                    android:padding="12dp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/final_text_male"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/three"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/poppins_light_italic"
                            android:padding="5dp"
                            android:text="*You can only donate Plasma if you are complete resolution of symptomps at least 28 days before donation"
                            android:textColor="@color/red_light"
                            android:includeFontPadding="false"
                            android:textSize="14sp"/>


                        <soup.neumorphism.NeumorphButton
                            android:id="@+id/donate_male"
                            style="@style/Widget.Neumorph.Button"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_below="@+id/final_text_male"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="Donate Plasma"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/design_default_color_primary"
                            android:textSize="22sp"
                            app:neumorph_lightSource="rightTop"
                            app:neumorph_shapeType="basin" />

                    </RelativeLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/female_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/top_header"
                    android:layout_marginTop="5dp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/female_first"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="8dp"
                            app:cardBackgroundColor="@color/global_background"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/female_Pregnant_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="12dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.02"
                                    android:text="Do you ever been pregnant?"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <soup.neumorphism.NeumorphCardView
                                    android:id="@+id/female_Pregnant_text_Yes"
                                    android:layout_width="150dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="8dp"
                                    app:neumorph_shapeType="flat">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:text="YES"
                                            android:textColor="@color/green" />

                                    </RelativeLayout>

                                </soup.neumorphism.NeumorphCardView>

                                <soup.neumorphism.NeumorphCardView
                                    android:id="@+id/female_Pregnant_text_No"
                                    android:layout_width="150dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="8dp"
                                    app:neumorph_shapeType="flat">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:text="NO"
                                            android:textColor="@color/red" />

                                    </RelativeLayout>

                                </soup.neumorphism.NeumorphCardView>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/female_second"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_below="@id/female_first"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="8dp"
                            app:cardBackgroundColor="@color/global_background"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/female_disease_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="12dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.02"
                                    android:text="Do you have any Chronic Kidney/ heart / lung / liver disease ?"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <soup.neumorphism.NeumorphCardView
                                    android:id="@+id/female_disease_text_Yes"
                                    android:layout_width="150dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginBottom="8dp"
                                    app:neumorph_shapeType="flat">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:text="YES"
                                            android:textColor="@color/green" />

                                    </RelativeLayout>

                                </soup.neumorphism.NeumorphCardView>

                                <soup.neumorphism.NeumorphCardView
                                    android:id="@+id/female_disease_text_No"
                                    android:layout_width="150dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginBottom="8dp"
                                    app:neumorph_shapeType="flat">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:text="NO"
                                            android:textColor="@color/red" />

                                    </RelativeLayout>

                                </soup.neumorphism.NeumorphCardView>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/female_third"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_below="@+id/female_second"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="8dp"
                            app:cardBackgroundColor="@color/global_background"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/female_cancer_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.02"
                                    android:text="Are you a Cancer Survivor ?"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <soup.neumorphism.NeumorphCardView
                                    android:id="@+id/female_cancer_text_Yes"
                                    android:layout_width="150dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginTop="16dp"
                                    app:neumorph_shapeType="flat">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:text="YES"
                                            android:textColor="@color/green" />

                                    </RelativeLayout>

                                </soup.neumorphism.NeumorphCardView>

                                <soup.neumorphism.NeumorphCardView
                                    android:id="@+id/female_cancer_text_No"
                                    android:layout_width="150dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginTop="16dp"
                                    app:neumorph_shapeType="flat">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:text="NO"
                                            android:textColor="@color/red" />

                                    </RelativeLayout>

                                </soup.neumorphism.NeumorphCardView>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/female_forth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/female_third"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginRight="8dp"
                            android:background="@color/global_background"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="6dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/female_weight_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.03"
                                    android:text="Your Weight:"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/female_weight_text_female"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/female_weight_text"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:background="@drawable/fill_background"
                                    android:fontFamily="@font/poppins_regular"
                                    android:includeFontPadding="false"
                                    android:letterSpacing="0.03"
                                    android:hint="Weight"
                                    android:inputType="number"
                                    android:padding="12dp"
                                    android:textSize="16sp"/>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/final_text_female"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/female_forth"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/poppins_light_italic"
                            android:padding="5dp"
                            android:text="*You can only donate Plasma if you are complete resolution of symptomps at least 28 days before donation"
                            android:textColor="@color/red_light"
                            android:includeFontPadding="false"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                        <soup.neumorphism.NeumorphButton
                            android:id="@+id/donate_female"
                            style="@style/Widget.Neumorph.Button"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_below="@+id/final_text_female"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="Donate Plasma"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/design_default_color_primary"
                            android:textSize="22dp"
                            app:neumorph_lightSource="rightTop"
                            app:neumorph_shapeType="basin" />

                    </RelativeLayout>

                </FrameLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>