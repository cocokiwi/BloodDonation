<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_gravity="bottom"
    android:background="@color/white"
    tools:context=".Dashboard.Setting.RequestApplyBottomNavFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        tools:ignore="MissingConstraints">


        <ProgressBar
            android:id="@+id/Request_Plasma_ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <FrameLayout
            android:id="@+id/cancel_request"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/wew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginRight="35dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Are you sure? You want to cancel your blood donation request?"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:letterSpacing="0.03"
                    android:includeFontPadding="false" />

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/cancel_request_button"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/wew"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Yes"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    app:neumorph_backgroundColor="@color/black2"
                    app:neumorph_lightSource="rightTop"
                    app:neumorph_shapeType="flat" />


            </RelativeLayout>

        </FrameLayout>


        <FrameLayout
            android:id="@+id/Request_Plasma"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/wwe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginRight="35dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Do you want to request for Blood Donor?"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:letterSpacing="0.03"
                    android:includeFontPadding="false"/>

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/plasma_request_button"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/wwe"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="10dp"
                    android:text="Yes"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    app:neumorph_backgroundColor="@color/black2"
                    app:neumorph_lightSource="leftTop"
                    app:neumorph_shapeType="flat" />


            </RelativeLayout>

        </FrameLayout>


        <FrameLayout
            android:id="@+id/frame3"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginRight="35dp"
                    android:text="You have to update your covid report before applying for Plasma"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_regular"
                    android:letterSpacing="0.03"
                    android:includeFontPadding="false"/>


            </RelativeLayout>

        </FrameLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>